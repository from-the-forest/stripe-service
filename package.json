{
  "name": "stripe-service",
  "version": "1.0.0",
  "description": "from the forest stripe service",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --inspect index.js",
    "test": "mocha ./**/*.test.js",
    "test:watch": "mocha --watch ./**/*.test.js",
    "test:cover": "nyc mocha --reporter mocha-junit-reporter ./**/*.test.js",
    "lint": "eslint index.js context/**/*.js resolvers/**/*.js",
    "lint:fix": "eslint --fix index.js context/**/*.js resolvers/**/*.js",
    "docker:build": "docker build -t ftf/stripe-service .",
    "docker:run": "docker run -p 4000:4000 ftf/stripe-service",
    "serve": "node index.js",
    "apollo:publish:private": "APOLLO_KEY=service:From-The-Forest:NKNX1rEFT5vmk45EL8LFdQ rover graph publish From-The-Forest@current --schema ./private-schema.gql",
    "apollo:publish:public": "APOLLO_KEY=service:From-The-Forest:NKNX1rEFT5vmk45EL8LFdQ rover graph publish From-The-Forest@current --schema ./public-schema.gql"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/from-the-forest/stripe-service.git"
  },
  "author": "Joe Cuffney <jcuffney@fromtheforest.io>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/from-the-forest/stripe-service/issues"
  },
  "homepage": "https://github.com/from-the-forest/stripe-service#readme",
  "dependencies": {
    "@apollo/federation": "^0.33.0",
    "apollo-server": "^3.3.0",
    "dotenv": "^10.0.0",
    "graphql": "^15.6.0",
    "ramda": "^0.27.1",
    "stripe": "^8.178.0"
  },
  "devDependencies": {
    "@apollo/rover": "^0.3.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "mocha": "^9.1.2",
    "mocha-junit-reporter": "^2.0.0",
    "nodemon": "^2.0.13",
    "nyc": "^15.1.0",
    "serverless": "^2.60.3",
    "serverless-prune-plugin": "^1.6.0"
  },
  "nyc": {
    "statements": 100,
    "branches": 0,
    "functions": 0,
    "lines": 0,
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "**/*.test.js"
    ],
    "watermarks": {
      "statements": [
        90,
        95
      ],
      "branches": [
        90,
        95
      ],
      "functions": [
        90,
        95
      ],
      "lines": [
        90,
        95
      ]
    }
  }
}
